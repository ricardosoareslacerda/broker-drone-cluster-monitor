FROM mongo-express

ENV ME_CONFIG_BASICAUTH_USERNAME: root
ENV ME_CONFIG_BASICAUTH_PASSWORD: MongoExpress2022!
ENV ME_CONFIG_MONGODB_ADMINUSERNAME: root
ENV ME_CONFIG_MONGODB_ADMINPASSWORD: MongoDB2022!
ENV ME_CONFIG_MONGODB_PORT: 27017
ENV ME_CONFIG_MONGODB_SERVER: host.docker.internal

EXPOSE 8081